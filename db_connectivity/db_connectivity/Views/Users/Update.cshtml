
@{
    Layout = null;
}
@using CricPanda.Models;
@model string
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          href="https://unpkg.com/98.css">
    <title>Update</title>
</head>
<body>
    <div style="background-color: lightgray">
        <div class="title-bar">
            <div class="title-bar-text">UPDATE IN DATABASE</div>
            <div class="title-bar-controls">
                <button aria-label="Minimize"></button>
                <button aria-label="Maximize"></button>
                <button aria-label="Close"></button>
            </div>
        </div>

        <hr>
        <button onclick="location.href = '../../Users/Create';" style="margin: 10px">INSERT</button>
        <button onclick="location.href = '../../Users/Delete';" style="margin: 10px">DELETE</button>
        <button onclick="location.href = '../../Home/LiveScore';" style="margin: 10px">Go to Website</button>


        <hr>
        <label>Status: @Model</label>
        <hr>
        <div style="margin: 5rem;">

            <div class="window" style="width: 500px; margin-bottom: 50px">
                <div class="title-bar">
                    <div class="title-bar-text">Update Match</div>

                </div>
                <div class="window-body">
                    <form method="post" action="../../Users/UpdateMatch">
                        <div class="field-row">
                            <div class="field-row">Select a Match:</div>
                            <select style="margin: 20px" id="Team" name="MID">
                                @foreach (Match s in ViewBag.Fix)
                                {
                                    <option value="@s.Match_ID">@s.Team1 vs @s.Team2</option>
                                }

                            </select>
                        </div>
                        <hr>
                        <div class="field-row">
                            <div class="field-row">Select Man of the Match:</div>
                            <select style="margin: 20px" id="Team" name="pname">
                                @foreach (Players p in ViewBag.Players)
                                {
                                    <option>@p.Player_Name</option>
                                }

                            </select>
                        </div>
                        <hr>
                        <button type="submit" style="margin: 10px">Update</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</body>
</html>

