
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
@{


}
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Create Team - Vice Captain</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">



</head>

<body class="bg-gradient-success">

    <style>

        body {
            margin: 0;
            font-family: 'Montserrat', sans-serif;
            background-image: url('../../images/2866128.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }
    </style>


    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block"> <img src="../../images/captain.jpg" class="rounded" alt="..." style="height: 700px;"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Select Vice Captain!</h1>
                                    </div>
                                    <form class="captain" id="exampleRadios">
                                        @{
                                            if (Session["PCL_Wicket_Keeper"].ToString() != Session["PCL_Captain"].ToString())
                                            { <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_Wicket_Keeper"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_Wicket_Keeper_Name"].ToString()
                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_Bowler1"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_Bowler1"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_Bowler1_Name"].ToString()

                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_Bowler2"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=" @Session["PCL_Bowler2"].ToString()" checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_Bowler2_Name"].ToString()

                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_Bowler3"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_Bowler3"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_Bowler3_Name"].ToString()

                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_Bowler4"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_Bowler4"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_Bowler4_Name"].ToString()

                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_Batsman1"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_Batsman1"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_Batsman1_Name"].ToString()

                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_Batsman2"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_Batsman2"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_Batsman2_Name"].ToString()

                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_Batsman3"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_Batsman3"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_Batsman3_Name"].ToString()

                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_Batsman4"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_Batsman4"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_Batsman4_Name"].ToString()

                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_All_Rounder1"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_All_Rounder1"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_All_Rounder1_Name"].ToString()
                                                    </label>
                                                </div>
                                            }
                                            if (Session["PCL_All_Rounder2"].ToString() != Session["PCL_Captain"].ToString())
                                            {
                                                <div class="form-group ">
                                                    <input class="form-check-input" type="radio" name="exampleRadios" value=@Session["PCL_All_Rounder2"].ToString() checked>
                                                    <label class="form-check-label" for="exampleRadios1">
                                                        @Session["PCL_All_Rounder2_Name"].ToString()
                                                    </label>
                                                </div>
                                            }
                                        }
                                    </form>
                                    <div>
                                        <input id="btn" type="button" value="Next" class="btn btn-primary btn-user btn-block" />
                                    </div>
                                    <hr>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
<script>

    function getValue() {
        var form = document.getElementById("exampleRadios");
        return form.elements["exampleRadios"].value;
    }

</script>

<script src="https://code.jquery.com/jquery-3.3.1.min.js">


</script>


<script type="text/javascript">

    $(function () {
        var val1 = [];
        $('#btn').on('click', function () {
            val1 = getValue();
            if (val1 != -1) {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("PCL_Vice_Captain_2", "home")",
                    data: { number1: val1 },
                    success: function (msg) {
                        location.href = "../Home/Panda_authenticate2";

                    }
                });
            }
            else {
                alert('Please Select According to the limit');
            }
        });
    });


</script>




</html>
