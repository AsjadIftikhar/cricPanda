@{
    Layout = null;
}


@using db_connectivity.Models;
@model List<Tournament>


<!DOCTYPE html>
<html>

<head>

    <link href="../../Content/bootstrap.css" rel='stylesheet' type='text/css' />

    <link href="../../Content/about.css" rel='stylesheet' type='text/css' />


    <style>
        body {
            background-image: url('../../images/conclud.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>


    <style>
        a {
            text-decoration: none;
            display: inline-block;
            padding: 8px 16px;
        }

            a:hover {
                background-color: #ddd;
                color: black;
            }

        .previous {
            background-color: #f1f1f1;
            color: black;
        }

        .next {
            background-color: #4CAF50;
            color: white;
        }

        .round {
            border-radius: 50%;
        }

        .Taab_h {
            margin-top: 0px;
            text-align: center;
            font-size: 4em;
            letter-spacing: 1px;
            text-shadow: 0 2px 12px rgba(0, 0, 0, 0.42);
            margin-bottom: 0.2em;
            color: black;
        }

        .img-responsive {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
        }
    </style>



</head>

<body>

    <!--//inner_banner-->
    <!--/short-->
    <div class="services-breadcrumb">
        <div class="inner_breadcrumb">

            <ul class="short">
                <a href="../../Home/Index" class="next"> &laquo; Previous </a>



            </ul>
        </div>
    </div>
    <!--//short-->
    <!-- //inner_content -->

    <div class="banner_bottom">
        <div class="container">
            <h3 class="Taab_h"> Current Tournaments</h3>

            <div class="inner_sec_w3_agileinfo">
                <div class="ab_info">
                    <img src="../../images/curr.jpg" alt=" " class="img-responsive">
                    <h4>Get all the Information about Current Tournaments</h4>
                    <p class="sub_p">
                        For all the cricket lovers that want to look at
                        what's going on in cricket, THIS IS THE PLACE TO BE.
                    </p>
                </div>


                <div class="col-md-6 news-right" data-aos="fade-left">
                    <h4>Here's the List :  </h4>
                    <br />

                    <style>
                        table {
                            border-collapse: collapse;
                            width: 100%;
                        }

                        th, td {
                            text-align: left;
                            padding: 8px;
                        }

                        tr:nth-child(even) {
                            background-color: #f2f2f2
                        }

                        th {
                            background-color: #4CAF50;
                            color: white;
                        }
                    </style>


                    <table class="myTable">
                        <thead><tr><th>Tournament_Name</th> <th>Tournament_Location</th> <th>Tournament_Start_Date</th> <th>Tournament_End_Date</th></tr></thead>

                        @foreach (Tournament user in Model)
                        {
                            <tr>
                                <td>><a href="../../Home/Taab_Matches?Tour_id=@user.Tournament_id">@user.Tournament_Name</a></td>
                                <td>@user.Tournament_Location</td>
                                <td>@user.Tournament_Start_Date</td>
                                <td>@user.Tournament_End_Date</td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- //about -->


</body>

</html>