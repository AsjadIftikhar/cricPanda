
@{
    Layout = null;
}
@using CricPanda.Models
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Specer Template">
    <meta name="keywords" content="Specer, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Team Players</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header Section Begin -->
    <header class="header-section">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="ht-info">
                            <ul>
                                <li>Welcome to CricPanda</li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="ht-links">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-vimeo"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-google-plus"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header__nav">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="logo">
                            <a><img src="~/img/banner1.jpg" alt=""></a>
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <div class="nav-menu">
                            <ul class="main-menu">
                                <li><a href="#">Live Scores</a></li>
                                <li class="active"><a href="../../Users/Teams">Teams</a></li>
                                <li><a href="./schedule.html">Tournaments</a></li>
                                <li><a href="../../Users/SelectTournament">Stats</a></li>
                                <li><a href="#">Panda League</a></li>
                                @*<li>
                                        <a href="#">Pages</a>
                                        <ul class="dropdown">
                                            <li><a href="./blog.html">Blog</a></li>
                                            <li><a href="./blog-details.html">Blog Details</a></li>
                                            <li><a href="#">Schedule</a></li>
                                            <li><a href="#">Results</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="./contact.html">Contact Us</a></li>*@
                            </ul>
                            @*<div class="nm-right search-switch">
                                    <i class="fa fa-search"></i>
                                </div>*@
                        </div>
                    </div>
                </div>
                <div class="canvas-open">
                    <i class="fa fa-bars"></i>
                </div>
            </div>
        </div>
    </header>
    <!-- Header End -->
    <div style="padding-top: 3rem;"></div>
    <!-- Club Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="../../img/B.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bs-text">
                        <h2>Fixtures of @ViewBag.team.Team_Name</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="club-tab-list">
        <div class="row">
            <div class="col-lg-8 m-auto">

                <div class="more-blog">
                    <a href="../../Users/TeamInfo?id=@ViewBag.team.Team_ID"><i class="fa fa-long-arrow-left"></i> Team Players</a>
                    <a href="../../Users/TeamMatch?id=@ViewBag.team.Team_ID">Team Fixtures <i class="fa fa-long-arrow-right"></i></a>
                </div>

            </div>
        </div>
    </div>

    <section class="schedule-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 left-blog-pad">
                    <div class="schedule-text">

                        @foreach (Match M in ViewBag.MatchList)
                        {
                            <div class="st-table">
                                <table>
                                    <tbody>
                                        <tr onclick="window.location.href = '../../Home/Scorecard?id=@M.Match_ID';">
                                            <td class="left-team">
                                                <img src="@M.TeamFlag1" alt="">
                                                <h4>@M.Team1</h4>
                                            </td>
                                            <td class="st-option">
                                                <div class="so-text">@M.Tournament Match at @M.Stadium</div>
                                                <h4>VS</h4>
                                                <div class="so-text">@M.Date</div>
                                            </td>
                                            <td class="right-team">
                                                <img src="@M.TeamFlag2" alt="">
                                                <h4>@M.Team2</h4>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Club Section End -->
    <!-- Footer Section Begin -->
    <footer class="footer-section set-bg" data-setbg="../../img/footer-bg.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="fs-logo">
                        <div class="logo">
                            <a><h2 style="color: white;">CricPanda</h2></a>
                        </div>
                        <ul>
                            <li><i class="fa fa-envelope"></i> CricPanda@gmail.com</li>
                            <li><i class="fa fa-copy"></i> +(92)300 678910</li>
                            <li><i class="fa fa-thumb-tack"></i> FAST Millat Sreet Faysal Town Lahore, Pakistan</li>
                        </ul>
                        <div class="fs-social">
                            <a><i class="fa fa-facebook"></i></a>
                            <a><i class="fa fa-twitter"></i></a>
                            <a><i class="fa fa-tumblr"></i></a>
                            <a><i class="fa fa-linkedin"></i></a>
                            <a><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <div class="container">
            <div class="copyright-option">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="co-text">
                            <p>

                                Copyright &copy;
                                <script>document.write(new Date().getFullYear());</script> All rights reserved

                            </p>
                        </div>
                        <div class="co-widget">
                            <ul>
                                <li><a>Copyright notification</a></li>
                                <li><a>Terms of Use</a></li>
                                <li><a>Privacy Policy</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <div style="padding: 3rem;"></div>
    <!-- Search model Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch"><i class="fa fa-close"></i></div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search model end -->
    <!-- Js Plugins -->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>
</body>

</html>